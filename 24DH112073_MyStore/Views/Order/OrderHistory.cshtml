﻿@model IEnumerable<_24DH112073_MyStore.Models.Order>

@{
    ViewBag.Title = "LỊCH SỬ MUA HÀNG";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

<h2>LỊCH SỬ MUA HÀNG</h2>
<hr />

@if (!Model.Any())
{
    <div class="alert alert-warning">
        Bạn chưa có đơn hàng nào. <a href="@Url.Action("Index", "Home")">Bắt đầu mua sắm ngay!</a>
    </div>
}
else
{
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Mã đơn hàng</th>
                <th>Ngày đặt</th> @* <--- SỬA Ở ĐÂY *@
                <th>Tổng tiền</th>
                <th>Trạng thái</th>
                <th>Địa chỉ nhận hàng</th>
                <th>Chi tiết</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.OrderID</td>

                    @* ĐÃ SỬA: Hiển thị cả Ngày/Tháng/Năm và Giờ:Phút (24h) *@
                    <td>@order.OrderDate.ToString("dd/MM/yyyy HH:mm")</td>

                    <td>@order.TotalAmount.ToString("N0") đ</td>
                    <td>@order.PaymentStatus</td>
                    <td>@order.ShippingAddress</td>
                    <td>
                        @* Nút xem chi tiết: Tái sử dụng trang OrderSuccess *@
                        <a href="@Url.Action("OrderSuccess", "Order", new { id = order.OrderID })" class="btn btn-info btn-xs">Xem Chi tiết</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
