<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My Store</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <style>
        .customer-header {
            background-color: #3498db;
            padding: 10px 0;
            color: white;
        }

        .customer-menu {
            background-color: #ecf0f1;
            border-bottom: 1px solid #bdc3c7;
        }

        .customer-footer {
            background-color: #2c3e50;
            color: white;
            padding: 20px 0;
            text-align: center;
            margin-top: 30px;
        }

        .dropdown {
            position: relative;
            display: inline-block;
        }

        .dropdown-content {
            display: none;
            position: absolute;
            background-color: #f9f9f9;
            min-width: 160px;
            box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
            z-index: 1000;
            right: 0;
        }

            .dropdown-content a {
                color: black;
                padding: 12px 16px;
                text-decoration: none;
                display: block;
            }

                .dropdown-content a:hover {
                    background-color: #f1f1f1;
                }

        .dropdown:hover .dropdown-content {
            display: block;
        }
    </style>
</head>
<body>
    @* ========= HEADER (LOGO, TÌM KIẾM, GIỎ HÀNG) ========= *@
    <header class="customer-header">
        <div class="container">
            <div class="row align-items-center">
                <style>
                    .logo-text {
                        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; /* Font hiện đại */
                        font-weight: 700; /* In đậm */
                        font-size: 24px; /* Cỡ chữ */
                        color: #005f73; /* Màu xanh biển đậm */
                    }

                        .logo-text span {
                            color: #ee6c4d; /* Màu cam nhấn nhá */
                        }
                </style>

                <a class="navbar-brand logo-text" href="/">Tày<span>Mixi</span></a>
                <div class="col-md-8 d-flex justify-content-end align-items-center">

                    @* ======================================================== *@
                    @* Ô TÌM KIẾM (ĐÃ CHUẨN HÓA TÊN THAM SỐ) *@
                    @* ======================================================== *@
                    <div class="search-box me-3" style="width: 250px;">
                        @using (Html.BeginForm("Index", "Home", FormMethod.Get, new { @class = "d-flex" }))
                        {
                            @* DÙNG TÊN ĐÚNG LÀ "searchTerm" *@
                            @Html.TextBox("searchTerm", null, new { @class = "form-control", @placeholder = "Tìm kiếm..." })
                        }
                    </div>
                    @* ======================================================== *@


                    @* PHẦN GIỎ HÀNG (Đọc từ Session) *@
                    @{
                        int cartCount = 0;
                        if (Session["Cart"] is _24DH112073_MyStore.Models.ViewModel.Cart cart)
                        {
                            cartCount = cart.Items.Count();
                        }
                    }
                    <a href="@Url.Action("Index", "Cart")" class="nav-link" style="color:white; margin-left: 15px;">
                        Giỏ hàng (@cartCount)
                    </a>

                    @* PHẦN TÀI KHOẢN (ĐÃ CẬP NHẬT) *@
                    <div class="dropdown" style="margin-left: 15px;">
                        <a href="javascript:void(0)" class="nav-link" style="color:white;">
                            @if (Session["UserRole"] != null && Session["UserRole"].ToString().Equals("Customer", StringComparison.OrdinalIgnoreCase))
                            {
                                <text>Xin chào, @Session["Username"]</text>
                            }
                            else
                            {
                                <text>Tài khoản</text>
                            }
                        </a>
                        <div class="dropdown-content">
                            @if (Session["UserRole"] != null && Session["UserRole"].ToString().Equals("Customer", StringComparison.OrdinalIgnoreCase))
                            {
                                @Html.ActionLink("Thông tin tài khoản", "ProfileInfo", "Account", new { area = "" }, null)

                                @* DÒNG CODE BẠN YÊU CẦU THÊM *@
                                @Html.ActionLink("Lịch sử mua hàng", "OrderHistory", "Order", new { area = "" }, null)

                                @Html.ActionLink("Đăng xuất", "Logout", "Account", new { area = "" }, null)
                            }
                            else
                            {
                                @Html.ActionLink("Đăng ký", "Register", "Account", new { area = "" }, null)
                                @Html.ActionLink("Đăng nhập", "Login", "Account", new { area = "" }, null)
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>

    @* ========= NỘI DUNG CHÍNH (TRANG CON SẼ HIỆN Ở ĐÂY) ========= *@
    <div class="container body-content" style="min-height: 500px; padding-top: 20px;">
        @RenderBody()
    </div>

    @* ========= FOOTER (CHÂN TRANG) ========= *@
    <footer class="customer-footer">
        <p>&copy; @DateTime.Now.Year - MyStore E-Commerce</p>
        <p>Địa chỉ: 123 Đường ABC, Quận XYZ, TP. HCM</p>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>