@model _24DH112073_MyStore.Models.ViewModel.HomeProductVM

@* Link CSS *@
<link rel="stylesheet" type="text/css" href="~/Content/myStyle/CustomerHome.css" />

@if (Model.FeaturedProducts != null && Model.FeaturedProducts.Any())
{
    <section class="container-fluid featureProd">
        <h2 style="text-align:center; color:brown; font-weight:bold; margin: 20px 0;">Sản phẩm nổi bật</h2>
        <div class="feature-container">
            @foreach (var product in Model.FeaturedProducts)
            {
                <div class="fproduct-item">

                    @* 1. KHUNG CHỨA ẢNH (Giúp ảnh vừa vặn, không bị méo) *@
                    <div class="img-container">
                        @* Sửa tên Action thành ProductDetails (có chữ s) *@
                        <a href="@Url.Action("ProductDetails", "Home", new { id = product.ProductID })">
                            @* Dùng Url.Content để xử lý đường dẫn ảnh *@
                            <img src="@Url.Content(product.ProductImage)" alt="@product.ProductName" />
                        </a>
                    </div>

                    @* 2. KHUNG CHỨA THÔNG TIN *@
                    <div class="product-info">
                        @* Sửa lỗi hiển thị giá tiền: 400.000 ₫ *@
                        <p class="prodPrice">
                            @product.ProductPrice.ToString("#,##0", System.Globalization.CultureInfo.GetCultureInfo("en-US")).Replace(',', '.') ₫
                        </p>

                        <p class="prodName">@product.ProductName</p>
                        <p class="prodCate">@product.Category.CategoryName</p>
                        <p class="prodSale">Đã bán: @product.OrderDetails.Count</p>
                    </div>
                </div>
            }
        </div>
    </section>
    <hr />
}