                @Html.EditorFor(model => model.CustomerAddress, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CustomerAddress, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Đăng ký" class="btn btn-info accountbtn" />
            </div>
        </div>

        <p>
            Bạn Đã Có Tài Khoản? @Html.ActionLink("Đăng nhập", "Login", "Account")
        </p>
    </div>
}